<header id="top" class="fixed z-50 w-full lg:px-64 px-4 bg-white flex flex-wrap items-center py-3 rounded-b-3xl">
    <div class="flex-1 flex justify-between items-center">
        <a href="/" class="text-xl"><img src="/img/logo.png" alt="" width="150" height="150"></a>
    </div>
    <label for="menu-toggle" class="pointer-cursor md:hidden block">
        <svg class="fill-current text-gray-900" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20">
            <title>menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
        </svg>
    </label>
    <input class="hidden" type="checkbox" id="menu-toggle" />
    <div class="hidden md:flex md:items-center md:w-auto w-full" id="menu">
        <nav>
            <ul class="md:flex items-center justify-between text-base text-black pt-4 md:pt-0">
                <li><a class="md:p-4 py-0 px-3 block text-xl font-semibold hover:text-orange-400" href="/curriculum">Curriculum</a></li>
                <li><a class="md:p-4 md:px-8 py-6 px-3 block text-xl font-semibold hover:text-orange-400" href="/choose">Login</a></li>
                <li><a class="btn btn-white btn-animation-1 font-semibold" href="/parents/register">Get Started</a></li>
            </ul>
        </nav>
    </div>
</header>

<script>
    var header = document.getElementById('top');
    
    window.addEventListener('scroll', function() {
        if (window.scrollY >=100) { 
            header.classList.add('shadow-lg');
            header.classList.add('duration-500');
        } 
        else {
            header.classList.remove('shadow-lg');
        }
    });
    </script>