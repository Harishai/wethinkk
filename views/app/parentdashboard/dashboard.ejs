<div x-data="{ sidebarOpen: false }" class="flex h-screen">
    <%- include('../../partials/parentsdashboard/sidebar.ejs') %> 
    <div class="flex-1 flex flex-col overflow-hidden">
        <%- include('../../partials/parentsdashboard/navbar.ejs')  %> 
        <main>
            <div class="container mx-auto">
                <div x-data="{ show: true }" x-show="show" x-init="setTimeout(() => show = false, 3000)">
                    <%- include('../../partials/index/messages.ejs')  %> 
                </div>
                <div class="py-4 p-8">
                    <h1 class="pt-8 text-4xl">Good day <%= parent_name %>!</h1>
                    <p class="text-2xl pt-4 font-light text-gray-900">Glad to have you as a part of the Wethinkk family</p>
                </div>
                <div>
                    <div class="py-4 p-8">
                        <div class="flex flex-col xl:flex-row justify-between pt-2">
                            <div>
                                <h1 class="text-2xl md:text-3xl xl:text-4xl">Lets Get Started</h1>
                                <p class="text-2xl pt-4 font-light text-gray-900">Add a child and select the course to see the progress</p>
                            </div>
                            <div class="pt-4 flex flex-col gap-2 md:flex-row">
                                <button class="focus:outline-none">
                                    <a href="/parents/dashboard/addchild">
                                    <div class="hover:shadow-xl h-full w-64 p-8 bg-red-100 rounded-2xl">
                                        Add Children
                                    </div>
                                    </a>
                                </button>
                                <button class="focus:outline-none">
                                    <div class="hover:shadow-xl h-full w-64 p-8 bg-green-100 rounded-2xl">
                                        Browse programs
                                    </div>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="px-8">
                    <div class="grid grid-cols-1 gap-8">
                        <% for(let i=0; i< child.length; i++) { %>
                        <div class="w-full">
                            <div class="<%=colors[i]%> h-40 rounded-2xl shadow-xl">
                                <div class="p-4">
                                    <h1 class="capitalize text-3xl"><%= child[i].name %></h1>
                                    <br>
                                    <h1 class="capitalize text-3xl">Grade: <%= child[i].grade %></h1>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>        
                </div>
            </div>
        </main>
        </div>
