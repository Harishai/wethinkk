<div class="choose">
    <div class="pt-12 lg:px-64 px-6">
        <div class="h-full py-24 flex items-center justify-center">
            <div class="w-full xl:w-1/3 bg-white shadow-xl rounded ">
                <div class="px-8 pt-6">
                    <h1 class="text-center text-3xl">Welcome to, <span class="green">we</span><span class="orange">Thinkk</span></h1>
                    <p class="text-center text-xl pt-2">Already have an account? <a class="text-green-700" href="/parents/login">Login</a></p>
                </div>
                <div class="p-4">
                  <%- include('../../partials/index/messages.ejs')  %> 
                </div>
                  <form class="px-8 pb-8 mb-4" action="/parents/register" method="POST">
                  <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="name">
                        Name
                    </label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                    id="name"
                    name="name"
                    type="text" 
                    value="<%= typeof name != 'undefined' ? name: '' %>"/>
                  </div>
                  <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
                        Email Address
                    </label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                    id="email" 
                    type="email"
                    name="email"
                    value="<%= typeof email != 'undefined' ? email: '' %>"/>
                  </div>
                  <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="phone">
                        Phone Number
                    </label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                    id="phone" 
                    type="tel"
                    name="phone"
                    value="<%= typeof phone != 'undefined' ? phone: '' %>"/>
                  </div>
                  <div class="">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                        Password
                    </label>
                    <input class="shadow appearance-none border  rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" 
                    id="password" 
                    type="password"
                    name="password"
                    value="<%= typeof password != 'undefined' ? password: '' %>"/>
                  </div>
                  <div class="">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="cfpassword">
                        Confirm Password
                    </label>
                    <input class="shadow appearance-none border  rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" 
                    id="cfpassword"
                    name="cfpassword"
                    type="text"
                    value="<%= typeof cfpassword != 'undefined' ? cfpassword: '' %>"/>
                  </div>
                  <div class="flex items-center justify-center -ml-4">
                    <button class="btn-hover color-4" type="submit">
                      Sign Up
                    </button>
                  </div>
                  <p class="text-xs font-light text-center">By registering you agree to our <a class="text-blue-700" href="#">Terms & conditions </a>and <a class="text-blue-700" href="#">Privacy policy</a></p>
                </form>
              </div>
        </div>
    </div>
  </div>